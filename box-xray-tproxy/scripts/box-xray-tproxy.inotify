#!/system/bin/sh
scripts=$(realpath $0)
scripts_dir=$(dirname ${scripts})

source "${scripts_dir}/box-xray-tproxy.service"

events=$1
monitor_file=$3

if [ "${monitor_file}" = "disable" ]; then
  case "${events}" in
    "d")
      start_tproxy >/dev/null 2>&1
      ;;
    "n")
      stop_tproxy >/dev/null 2>&1
      ;;
  esac
fi

# {version:2.1}
